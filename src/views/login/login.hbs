<!-- Required meta tags -->
<link rel="stylesheet" href="/CSS/Usuario/Login.css" type="text/css">

<div id="contenedor">
    <!-- Aquí comienza el primer formulario -->
    <div id="formulario">
        <h1>Iniciar Sesión</h1>
        <form action="/Login" method="post" id="ocultar">
            <div id="Email">
                <input id="nombreIntxt" type="userName" name="username" placeholder="Usuario" required>
            </div>

            <div id="Password">
                <input id="passIntxt" type="password" name="password" placeholder="Contraseña" required>
            </div>

            <div id="ojo">
                <button id="visto" type="button" onclick="boton.cambio()"><img src="/img/icons/white/eyes.png"></button>
                <button id="equis" type="button" onclick="boton.cambio2()"><img
                        src="/img/icons/white/cerrado.png"></button>
            </div>

            <div id="recuperacion">
                <a href="/updatePassword">
                    <button type="button">
                        <div id="iconoForgotPassword">
                            <img src="/img/icons/white/forgot-password.png">
                        </div>Olvidé mi Contraseña
                    </button>
                </a>
            </div>

            <div id="botonIniciarSesion">
                <button type="sumbit">
                    <div id="iconoLogin">
                        <img src="/img/icons/white/login.png">
                    </div>Iniciar Sesión
                </button>
            </div>

        </form>
    </div>
    <!-- Aquí termina el primer formulario -->
</div>

<div id="logo">
    <img src="/img/logos/Logo_CIty_Boletos con Perfil.png" alt="Logo">
</div>

<script src="/js/Usuario/Login.js"></script>